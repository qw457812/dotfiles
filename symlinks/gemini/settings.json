{
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "disableAutoUpdate": true,
    "preferredEditor": "neovim",
    "vimMode": true
  },
  "context": {
    "fileName": [
      "CLAUDE.md",
      "CLAUDE.local.md",
      "GEMINI.md"
    ]
  },
  "ui": {
    "hideBanner": true,
    "theme": "GitHub"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    }
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "tools": {
    "useRipgrep": true
  }
}