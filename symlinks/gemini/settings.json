{
  "preferredEditor": "neovim",
  "vimMode": true,
  "checkpointing": {
    "enabled": true
  },
  "theme": "Default",
  "hideBanner": true,
  "usageStatisticsEnabled": false,
  "contextFileName": [
    "CLAUDE.md",
    "CLAUDE.local.md",
    "GEMINI.md"
  ],
  "selectedAuthType": "oauth-personal",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  }
}