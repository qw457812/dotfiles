{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 90,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)"
    ]
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "if command -v bunx >/dev/null 2>&1; then bunx -y ccstatusline@latest; else npx -y ccstatusline@latest; fi",
    "padding": 0
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754043197597
  }
}