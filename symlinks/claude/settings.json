{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 90,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "MANPAGER": "col -bx"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch(domain:*)",
      "Read(**)",
      "Glob(**)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(which:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh status:*)",
      "Bash(gh api:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git branch -v:*)",
      "Bash(git remote -v:*)",
      "Bash(nvim --version:*)",
      "Bash(node --version:*)",
      "Bash(npm list:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "if [ \"$__IS_CLAUDECODE_NVIM\" = \"1\" ] || [ -n \"$TERMUX_VERSION\" ]; then echo ''; else if command -v bunx >/dev/null 2>&1; then bunx -y ccstatusline@latest; else npx -y ccstatusline@latest; fi; fi",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754043197597
  }
}
