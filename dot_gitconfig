[diff]
    algorithm = histogram
    colorMoved = default
    tool = nvimdiff
    # Better submodule diffs
    submodule = log

[merge]
    tool = nvimdiff
    conflictstyle = zdiff3

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autoStash = true
    autoSquash = true
    ; updateRefs = true

[commit]
    verbose = true
    ; template = ~/.stCommitMsg

[init]
    defaultBranch = main

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[alias]
    st = status
    co = checkout
    sw = switch
    br = branch
    c = commit
    ci = commit
    br = branch
    p = push
    pf = push --force-with-lease --force-if-includes
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
    ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    discard = checkout --
    unstage = reset HEAD --
    uncommit = reset --soft HEAD^
    amend = commit --amend --no-edit
    unamend = reset --soft HEAD@{1}
    fixup = commit --fixup
    fixup-rebase = "!f() { git commit --fixup \"$1\" && git rebase -i --autosquash \"$1~1\"; }; f"

[help]
    autocorrect = prompt

[log]
    date = auto:human

