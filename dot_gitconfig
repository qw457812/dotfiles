    ; minus-emph-style              = syntax auto
    minus-emph-style              = syntax bold "#860000" # #600000 #780000 #8e0000
    minus-style                   = syntax      "#550000" # #401010 #400000 #5e0000
    plus-style                    = syntax      "#004000" # #104010 #004000 #004800
    plus-emph-style               = syntax bold "#006800" # #006000 #007800 #007800
    minus-non-emph-style          = minus-style
    minus-empty-line-marker-style = minus-style
    plus-non-emph-style           = plus-style
    plus-empty-line-marker-style  = plus-style

    ; diff-so-fancy = true
